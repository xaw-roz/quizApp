<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>question</servlet-name>
        <servlet-class>controller.QuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>question</servlet-name>
        <url-pattern>/addQuestion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>question</servlet-name>
        <url-pattern>/qAdd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>question</servlet-name>
        <url-pattern>/qlist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>question</servlet-name>
        <url-pattern>/qedit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>question</servlet-name>
        <url-pattern>/qdelete</url-pattern>
    </servlet-mapping>

    
    <servlet>
        <servlet-name>quiz</servlet-name>
        <servlet-class>controller.QuizServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>quiz</servlet-name>
        <url-pattern>/quizplay</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>user</servlet-name>
        <servlet-class>controller.UserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/ulist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/uedit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/udelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/editUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/deleteUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/uAdd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>groupQuiz</servlet-name>
        <servlet-class>controller.GroupQuizServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>groupQuiz</servlet-name>
        <url-pattern>/groupquize</url-pattern>
    </servlet-mapping>

</web-app>